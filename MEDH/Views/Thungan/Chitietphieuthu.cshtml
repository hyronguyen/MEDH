@{
    ViewData["Title"] = "Chi tiết phiếu thu";
}

<link rel="stylesheet" href="~/css/thunganStyles/chitietphieuthu.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />


<div class="container mt-4">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a>Thu ngân</a></li>
            <li class="breadcrumb-item"><a asp-controller="Thungan" asp-action="Dsphieuthu">Danh sách phiếu thu</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.MaHS</li>
        </ol>
    </nav>

    <h2 class="mb-4">Chi tiết phiếu thu</h2>

    <!-- Toolbar: chọn quầy + tìm kiếm -->
    <div class="toolbar">
        <select class="form-select" aria-label="Chọn quầy thu ngân">
            <option selected>Chọn quầy thu ngân...</option>
            <option value="Q1">Quầy 1</option>
            <option value="Q2">Quầy 2</option>
            <option value="Q3">Quầy 3</option>
        </select>
        <input type="text" class="form-control" placeholder="Tìm bệnh nhân, mã HS..." />
    </div>

    <!-- Patient Header -->
    <div class="patient-header">
        <div class="patient-avatar">
            <i class="fa-solid fa-user"></i>
        </div>
        <div class="patient-info">
            <div><span class="label">Mã BN:</span> <span class="value">@ViewBag.MaBN</span></div>
            <div><span class="label">Mã HS:</span> <span class="value">@ViewBag.MaHS</span></div>
            <div><span class="label">Ngày vào viện:</span> <span class="value">@ViewBag.NgayVaoVien</span></div>
            <div><span class="label">Số BHYT:</span> <span class="value">@ViewBag.SoBHYT</span></div>
            <div><span class="label">Đối tượng:</span> <span class="value">@ViewBag.DoiTuong</span></div>
            <div><span class="label">Loại miễn giảm:</span> <span class="value">@ViewBag.MienGiam</span></div>
        </div>
    </div>

    <div class="row gy-4">
        <!-- Services Table -->
        <div class="col-lg-8">
            <div class="service-table">
                <h5 class="mb-3">DS Dịch vụ</h5>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên dịch vụ</th>
                                <th>SL</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* Render từ Model *@
                            <tr><td>1</td><td>Xét nghiệm APTT</td><td>1</td><td>8.700</td><td>8.700</td></tr>
                            <tr><td>2</td><td>Xét nghiệm PT</td><td>1</td><td>13.680</td><td>13.680</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sidebar Payment Info -->
        <div class="col-lg-4">
            <div class="sidebar">
                <h5>Thông tin số tiền</h5>
                <div class="item"><span>Tạm ứng:</span><span>@ViewBag.TamUng:N0 đ</span></div>
                <div class="item"><span>Chưa TT:</span><span class="text-danger">@ViewBag.ChuaTT:N0 đ</span></div>
                <div class="item"><span>Đã TT:</span><span>@ViewBag.DaTT:N0 đ</span></div>
                <div class="item total"><span>NB phải trả:</span><span>@ViewBag.NBTra:N0 đ</span></div>

                <div class="actions">
                    <button class="btn btn-success">
                        <i class="fa-solid fa-credit-card"></i> Thanh toán
                    </button>
                    <button class="btn btn-secondary">
                        <i class="fa-solid fa-print"></i> In
                    </button>
                    <button class="btn btn-primary">
                        <i class="fa-solid fa-file-medical"></i> Xác nhận BHYT
                    </button>
                    <button class="btn btn-warning">
                        <i class="fa-solid fa-file-invoice-dollar"></i> Sinh phiếu chi
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
