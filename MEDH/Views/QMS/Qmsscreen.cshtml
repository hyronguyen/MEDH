@{
    ViewData["Title"] = "QMS";
}
<link rel="stylesheet" href="~/css/QMSStyles/qms.css" asp-append-version="true" />

<!-- Header with title (clickable to trigger PIN) -->
<div class="qms-header text-center">
    <h1 id="qmsTitle" class="qms-title" data-bs-toggle="modal" data-bs-target="#pinModal">
        QMS
    </h1>
</div>

<!-- Display ticket number -->
<div class="qms-display d-flex justify-content-center align-items-center">
    <div class="ticket-box">
        <div class="ticket-label">SỐ THỨ TỰ</div>
        <div class="ticket-number" id="currentTicket">0001</div>
    </div>
</div>

<!-- Modal nhập PIN -->
<div class="modal fade" id="pinModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác thực PIN</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <label for="pinInput" class="form-label">Nhập mã PIN</label>
                <input type="password" class="form-control" id="pinInput" placeholder="••••" />
                <div id="pinError" class="text-danger mt-2 small" style="display: none;">
                    Mã PIN không đúng.
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-primary" id="validatePinBtn">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal chọn quầy/phòng -->
<div class="modal fade" id="roomModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chọn quầy / phòng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <select class="form-select" id="roomSelect">
                    <option selected disabled>Chọn quầy / phòng...</option>
                    <option value="Quầy 1 - BHYT">Quầy 1 - BHYT </option>
                    <option value="Quầy 2 - BHYT">Quầy 2 - BHYT</option>
                    <option value="Quầy 1 - DV">Quầy 1 - DV</option>
                    <option value="Quầy 2 - DV">Quầy 2 - DV</option>
                    <option value="Quầy thu ngân 1">Thu ngân 1</option>
                    <option value="Quầy phát thuốc 2">Phát thuốc 2</option>
                    <option value="Phòng Nội tổng quát">Phòng Nội tổng quát</option>
                    <option value="Phòng Nội ngoại quát">Phòng Nội ngoại quát</option>
                    <option value="Xét nghiệm">Xét nghiệm</option>
                </select>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="saveRoomBtn">Lưu</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/QMS/QMS.js" asp-append-version="true"></script>
