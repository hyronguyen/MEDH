<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MEDH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MEDH.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    

</head>
<body>
   <!--Top Navigator-->
    <header class="bg-dark py-2 shadow-sm">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap">
            <!-- Logo -->

            <a class="navbar-brand d-flex align-items-center fw-bold fs-4 text-light me-4" asp-area="" asp-controller="Home" asp-action="Index" style="gap: 0.5rem;">
                <img src="~/assets/images/logo.webp" alt="Logo" style="width: 30px; height: 30px;" />
                <span>ĐA KHOA DEMO</span>
            </a>

            <!-- Ô tìm kiếm có hiệu ứng xổ -->
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Tìm kiếm..." aria-label="Search">
              <button class="btn btn-outline-light" type="submit">
                <i class="bi bi-search"></i>
              </button>
            </form>


            <!-- Biểu tượng bên phải -->
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link text-light" href="#"><i class="bi bi-person-circle fs-5"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="#"><i class="bi bi-question-circle fs-5"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="#"><i class="bi bi-gear fs-5"></i></a>
                </li>
            </ul>
        </div>
    </header>




    <!--Main Frame-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!--footer-->
    <!-- Footer Tối Giản Hiện Đại -->
    <footer class="bg-light text-m    uted py-4 mt-auto">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-2 text-center text-md-start">
        <div>&copy; 2025 - POWERED by MEDH HIS</div>
            <div>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none me-3">Privacy</a>
            <a hr    ef="#" class="text-    muted text-decoration-none me-3">Terms</a>
            <a href="#" class="text-    muted text-decoration-none">Contact</a>
        </div>
    </div>
</footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<script src="~/js/mainLayout.js" asp-append-version="true"></script>
</html>
